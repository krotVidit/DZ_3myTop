import java.util.*;

public class Exercise2 {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        System.out.println("Введите первую цифру");
        int a = scan.nextInt();

        System.out.println("Введите вторую цифру");
        int b = scan.nextInt();

        if((a<=1) && (b<=3)){
            int res1 = a+b;
            System.out.println("Сумма чисел равна " + res1);
        }
        else {
            int res2 = a -b;
            int res3 = b-a;
            System.out.println("Вычитание из первого числа второго  " + res2);
            System.out.println("Вычитание из второго числа первого  " + res3);
        }
    }
}
